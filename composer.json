{
  "name": "schenke-io/terminal",
  "description": "PHP classes for simple terminal functionality",
  "autoload": {
    "psr-4": {
      "SchenkeIo\\Terminal\\": "src/"
    }
  },
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "symfony/console": "^6.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit tests",
    "self-test-all": "SchenkeIo\\Terminal\\ConsoleColor::echoSelfTestAll",
    "self-test-styles": "SchenkeIo\\Terminal\\ConsoleColor::echoSelfTestAllStyles"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
